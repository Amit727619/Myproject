<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>Simple HTML Form</title>
        <link rel="stylesheet" href="stylec.css" />
        <script src="validatorr.js"></script>
        <style>
              body {
                margin: 0;
                font-family: Arial, Helvetica, sans-serif;
            }

            .header {
                overflow: hidden;
                background-color: rgb(230, 41, 123);
                padding: 20px 10px;
                color: white;
            }

            .header a {
                float: left;
                color: black;
                text-align: center;
                padding: 12px;
                text-decoration: none;
                font-size: 18px;
                line-height: 25px;
                border-radius: 4px;
                color: white;
            }

            .header a.logo {
                font-size: 25px;
                font-weight: bold;
                color: white;
            }

            .header a:hover {
                background-color: #ddd;
                color: black;
            }

            .header-right {
                float: right;
                color: white;
            }

            .dropdown {
                float: left;
                overflow: hidden;
            }

            .dropdown .dropbtn {
                font-size: 17px;
                border: none;
                outline: none;
                color: white;
                padding: 14px 16px;
                background-color: inherit;
                font-family: inherit;
                margin: 0;
            }

            .dropdown-content {
                display: none;
                position: absolute;
                background-color: #f9f9f9;
                min-width: 160px;
                box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
                z-index: 1;
            }

            .dropdown-content a {
                float: none;
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
                text-align: left;
            }

            .topnav a:hover,
            .dropdown:hover .dropbtn {
                background-color: #555;
                color: white;
            }

            .dropdown-content a:hover {
                background-color: #ddd;
                color: black;
            }

            .dropdown:hover .dropdown-content {
                display: block;
            }
            #rcorners2 {
                border-radius: 25px;
                border: 2px solid rgb(230, 41, 123);
                padding: 20px;

                width: 490px;
                height: 480px;
            }


            .button {
                background-color: rgb(230, 41, 123);
                border: none;
                color: white;
                padding: 7px 15px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 16px;
                margin: 4px 2px;
                cursor: pointer;
                margin-left: 78px;
            }

            .button3 {
                background-color: #dd2c7f;
            } /* Red */
        </style>
    </head>
    <body>
        <div class="header">
            <a href="#default"  style="font-family:cursive; font-size: 37px;">Wedding Planner</a>
            <div class="header-right">
                <a href="/">Home</a>
                <div class="dropdown">
                    <button class="dropbtn">
                        Vendor
                        <i class="fa fa-caret-down"></i>
                    </button>
                    <div class="dropdown-content">
                        <a href="photogrphergallery">Photographer</a>
                        <a href="choreographer">Choreographer</a>
                        <a href="makeup">Makeup</a>
                        <a href="venue">Venue</a>
                        <a href="decoration">Decoration</a>
                    </div>
                </div>
                <div class="dropdown">
                    <button class="dropbtn">
                        Login
                        <i class="fa fa-caret-down"></i>
                    </button>
                    <div class="dropdown-content">
                        <a href="/userlogin">User Login</a>
                        <a href="/adminlogin">Admin Login</a>
                    </div>
                </div>
                <a href=""></a>
                <a href=""></a>
                <a href=""></a>
            </div>
        </div>
        <form name="contactForm" onsubmit="return validateForm()" action="/savee" method="post" id="rcorners2">
            <h2>User Registration Form</h2>
            <div class="row">
                <label><b>Username:</b></label>
                <input type="text" name="name" placeholder="Username" />
                <div class="error" id="nameErr"></div>
            </div>
            <div class="row">
                <label><b>Email Address:</b></label>
                <input type="text" name="email" placeholder="email" />
                <div class="error" id="emailErr"></div>
            </div>
            <div class="row">
                <label><b>Mobile Number:</b></label>
                <input type="text" name="mobno" maxlength= "10" placeholder="mob no." />
                <div class="error" id="mobnoErr"></div>
            </div>

            <div class="row">
                <label><b>Address:</b></label>
                <input type="text" name="address" placeholder="address" />
                <div class="error" id="addressErr"></div>
            </div>

            <div class="row">
                <label><b>Password:</b></label>
                <input type="text" name="password" placeholder="password" />
                <div class="error" id="passwordErr"></div>
            </div>
            <button class="button button3" input type= "submit"><b>Submit</b></button>
            <!-- <div class="row">
                <input type="submit" value="Submit" />
            </div> -->
        </form>
    </body>
</html>